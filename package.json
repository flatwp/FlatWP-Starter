{
  "name": "flatwp-starter",
  "version": "0.1.0",
  "description": "Modern headless WordPress starter kit built with Next.js 15, TypeScript, and TailwindCSS",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/flatwp/FlatWP-Starter.git"
  },
  "homepage": "https://flatwp.com",
  "keywords": [
    "wordpress",
    "headless-cms",
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "wpgraphql",
    "starter-template"
  ],
  "scripts": {
    "dev": "next dev -p 3005",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "graphql:codegen": "export $(grep -v '^#' .env.local | grep -v '^$' | xargs) && graphql-codegen --config codegen.ts",
    "clean": "rm -rf .next node_modules .turbo"
  },
  "dependencies": {
    "@apollo/client": "^3.11.11",
    "@apollo/experimental-nextjs-app-support": "^0.11.5",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fuse.js": "^7.0.0",
    "graphql": "^16.10.0",
    "lucide-react": "^0.445.0",
    "next": "^15.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "resend": "^6.5.2",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.4",
    "@graphql-codegen/client-preset": "^4.5.1",
    "@graphql-codegen/introspection": "^4.0.3",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.3",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.2"
  }
}
